.mod-reqbuilder-body {
  .type-tabs {
    margin: 20px
    display: flex

    > li {
      margin: 0 60px 0 0
      display: flex

      &.disabled {
        cursor: default
        color: #ccc

        label {
          cursor: default
        }
      }

      &.checked {
        color: #333

        .reqbuilder-body-rawtype {
          color: #333
        }
      }

      .reqbuilder-body-rawtype {
        font-size: 12px
        position: relative
        margin: -3px 0 0 12px;
        cursor: default
        color: #eee

        .rawtype-wrap {
          margin: 1px 0 0;
          display: block;
        }

        .mod-dropdown-menu {
          position: absolute
          display: none
        }

        &.show-raw-list {
          .mod-dropdown-menu {
            display block
          }
        }

        &.show-raw-value {
          color #06c
          cursor: pointer
        }
      }
    }

    label {
      display: flex
      cursor: pointer

      input {
        cursor: pointer

        &:disabled {
          cursor: default
        }
      }

      span {
        margin: -4px 0 0 8px
      }
    }
  }

  .binary-file {
    margin: 0 0 0 20px
  }

  .mod-kv {
    .kv-row {

      input {
        margin-right: 1%
        width: 50%
      }

      &-wrap {
        flex: 1
      }
    }
  }

  .tip-con {
    padding: 2px 0 0 20px;
    color: #999;

    em {
      margin: 0 4px 0 0
    }

    &.error-tip {
      color: #ff5a19;
    }
  }
}