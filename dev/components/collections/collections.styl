.mod-collections {

  .empty-tip {
    font-size: 12px
    color: #ccc
    margin: 8px 0 0
    cursor: default
  }

  .coll {
    margin: 0 -10px

    &-wrap {
      display: flex
      color: #4c4c4c
      padding: 12px 8px
      cursor: pointer
      transition all ease .5s

      &:hover {
        background-color: #e8f2fe
      }
    }

    &-icon {
      width: 44px
      height: 44px
      line-height: 48px
      border: 2px solid #b5d5ff
      border-radius 50%
      color: #53a2f2
      font-size: 26px;
      text-align: center;
    }

    &-info {
      margin: 4px 0 0 12px
    }

    &-name {
      font-weight: bold
    }

    &-reqnum {
      font-size: 12px
      color: #ccc
      display: flex
    }

    &-dot {
      width: 8px
      height: 8px
      background-color: #ccc
      border-radius 50%
      margin: 6px 3px 0 0
    }

    &-folder {

      &-wrap {
        display: flex
        font-size: 12px
        padding: 4px 14px;
        cursor: pointer
        transition all ease .5s

        &:hover {
          background-color: #e8f2fe
        }

        .glyphicon-folder-open {
          display none
          margin: 2px 0 0
        }

        &.expand {

          .glyphicon-folder-close {
            display none
          }

          .glyphicon-folder-open {
            display block
          }
        }
      }

      &-icon {
        width: 32px
        height: 32px
        line-height: 34px
        font-size: 26px
        text-align: center
        color: #53a2f2
      }

      &-name {
        margin: 7px 0 0 20px
      }
    }

    &-req {
      color: #4c4c4c
      font-size: 12px
      display: flex
      padding: 0 0 0 20px
      height: 30px
      line-height: 30px
      cursor: pointer
      transition all ease .5s

      &:hover {
        background-color: #e8f2fe
      }

      &-method {
        margin: 0 8px 0 0
        color: #666
        font-weight: bold
        width: 44px
        text-align: center
      }

      &-url {
        max-width: 200px
        white-space: nowrap
        text-overflow ellipsis
        overflow: hidden
      }
    }

    .method-get {
      color: #81d4a5
    }

    .method-post {
      color: #ffaf3d
    }

    .method-delete {
      color: #ff615f
    }

    .method-put {
      color: #83b2e5
    }

    &-folders,
    &-reqs {
      transition all ease .1s;
      height: 0
      overflow: hidden;
    }

  }
}