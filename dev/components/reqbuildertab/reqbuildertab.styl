.mod-reqbuilder-tab {
  ol {
    border-bottom: 1px solid #ccc
    margin: 48px 0 0
    color: #999

    li {
      width: 160px
      text-align: center
      float: left
      cursor: pointer
      padding-bottom: 8px;
      transition color ease .5s
      color: #999;
      border-right 1px solid #ccc
      border-bottom: solid 4px #fff;

      &:hover {
        color: #666;
      }

      &.active {
        color: #666;
        border-bottom-color #666
        cursor: default
      }

      &.disabled {
        cursor: not-allowed
        color: #eee
      }
    }
  }
}