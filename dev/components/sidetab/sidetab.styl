.mod-tab {
  ol {
    border-bottom: 1px solid #ccc
    margin: 16px -10px 0
    color: #999

    li {
      width: 50%
      text-align: center
      font-size: 16px
      float: left
      cursor: pointer
      padding-bottom: 8px;
      transition color ease .5s

      &:hover {
        color: #333;
      }

      &.active {
        color: #1acaaf;
        border-bottom: solid 4px #1acaaf;
        cursor: default
      }
    }
  }
}