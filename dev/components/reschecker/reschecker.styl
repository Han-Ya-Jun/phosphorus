.mod-res-checker {
  margin: 12px

  .res-checker-tip {
    color: #999

    .glyphicon-exclamation-sign {
      margin: 0 4px 0 0
    }
  }

  .error-tip {
    color: #ffaf3d
    margin: 20px
  }

  .mod-kv {
    .kv-row {
      display: block

      input {
        margin-right: 6%
        width: 56%
      }

      .input-wrap {
        flex inherit
      }

      &-wrap {
        display: flex
      }

      .sub-kv-row {
        padding: 0 0 0 20px
        border-radius 5px
        transition all ease .3s

        .kv-row-wrap {
          margin: 0 0 0 20px
        }

        .sub-kv-row {
          padding-left: 40px
        }

        &.hover {
          background-color: #f8f8f8
        }
      }
    }

    .kv-row-array:first-child:before {
      content '[' !important
      font-size: 18px
      color: #ccc
    }

    .kv-row-array:last-child:after {
      content ']'
      font-size: 18px
      color: #ccc
    }

    .kv-row-object:first-child:before {
      content '{' !important
      font-size: 18px
      color: #ccc
    }

    .kv-row-object:last-child:after {
      content '}'
      font-size: 18px
      color: #ccc
    }

    select:disabled {
      cursor: not-allowed
    }
  }
}